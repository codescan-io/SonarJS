{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "allowJs": true
  },
  "references": [
    {
      "path": "./jsts/src/rules/tsconfig.json"
    }
  ],
  "include": [
    "server.ts",
    "*/src/**/*.ts",
    "*/src/**/*.json",
    "bridge/src/worker.js",
    "ruling/tools/*.ts",
    "ruling/filter/*.ts"
  ],
  "exclude": ["*/src/rules/*/*.test.ts", "*/src/rules/*/*.fixture.*", "*/src/rules/*/fixtures"]
}
